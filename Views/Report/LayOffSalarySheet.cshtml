}

<div class="container mx-auto mt-8 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Lay-Off Salary Sheet Final -->
        <div class="card bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="card-header bg-gradient-to-r from-green-400 to-blue-500 text-white text-center py-4">
                <h3 class="text-xl font-semibold">Lay-Off Salary Sheet Final (March-2025)</h3>
            </div>
            <div class="card-body p-6">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-warning text-center bg-yellow-100 text-yellow-800 p-4 rounded-lg mb-4">
                        @TempData["Message"]
                    </div>
                }

