@{
    ViewData["Title"] = "Database Backup";
}

<div class="container mx-auto mt-8 p-6 max-w-lg bg-white shadow-lg rounded-lg">
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Database Backup</h2>

    <!-- Message Alert -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info bg-blue-100 text-blue-800 border-l-4 border-blue-500 p-4 mb-4 rounded-md">
            @ViewBag.Message
        </div>
    }

    <!-- Form -->
    <form method="post" asp-action="BackupDatabase" class="space-y-6">
        <!-- Database ID Input (optional) -->
        @* <div class="form-group">
            <label for="dbId" class="block text-lg font-medium text-gray-700">Database ID:</label>
            <input type="number" class="form-control w-full border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-green-500 focus:outline-none" id="dbId" name="dbId" required>
        </div> *@

        <!-- Backup Button -->
        <button type="submit" class="w-full bg-gradient-to-r from-green-400 to-blue-500 text-white font-semibold text-lg py-3 rounded-md hover:from-green-500 hover:to-blue-600 focus:ring-2 focus:ring-green-500">
            Backup Database
        </button>
    </form>
</div>
